# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Java files
[*.java]
indent_style = space
indent_size = 4
charset = utf-8

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4

# Properties files
[*.properties]
charset = utf-8

# XML files
[*.xml]
indent_style = space
indent_size = 2

